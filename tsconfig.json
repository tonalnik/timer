{
	"compilerOptions": {
		"target": "ES2017",
		"lib": ["dom", "dom.iterable", "esnext"],
		"allowJs": true,
		"skipLibCheck": true,
		"noEmit": true,
		"strictNullChecks": false,
		"strict": true,
		"esModuleInterop": true,
		"module": "esnext",
		"moduleResolution": "bundler",
		"resolveJsonModule": true,
		"isolatedModules": true,
		"jsx": "preserve",
		"incremental": true,
		"plugins": [{ "name": "next" }],
		"paths": { "@/*": ["./*"] }
	},
	"include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "scripts/nodejs/getPackageVersion.js"],
	"exclude": ["node_modules"]
}
