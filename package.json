	"main": "index.js",
	"config": {
		"port": "8080"
	},
	"scripts": {
		"build": "esbuild --minify root/index.tsx --bundle --sourcemap --outdir=root/dist",
		"start": "http-server-spa root index.html %npm_package_config_port%",
